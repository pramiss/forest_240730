<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="com.forest.order.mapper.OrderMapper">
	<select id="selectOrderListByIdDesc" resultType="com.forest.order.domain.Order">
		SELECT
			`id`
			, `paymentId`
			, `userId`
			, `totalPrice`
			, `address`
			, `phoneNumber`
			, `status`
			, `createdAt`
			, `updatedAt`
		FROM
			`order`
		ORDER BY `id` DESC
	</select>
	<select id="selectOrderListByUserIdByIdDesc" parameterType="int" resultType="com.forest.order.domain.Order">
		SELECT
			`id`
			, `paymentId`
			, `userId`
			, `totalPrice`
			, `address`
			, `phoneNumber`
			, `status`
			, `createdAt`
			, `updatedAt`
		FROM
			`order`
		WHERE
			`userId` = #{userId}
		ORDER BY `id` DESC
	</select>
	<insert id="insertOrder" parameterType="map">
		INSERT INTO `order`
		(
			`paymentId`
			, `userId`
			, `totalPrice`
			, `address`
			, `phoneNumber`
			, `status`
			, `createdAt`
			, `updatedAt`
		)
		VALUES
		(
			#{paymentId}
			, #{userId}
			, #{totalPrice}
			, #{address}
			, #{phoneNumber}
			, '상품준비중'
			, NOW()
			, NOW()
		);
	</insert>
	<update id="updateOrderStatus" parameterType="map">
		UPDATE `order`
		SET 
			`status` = #{status} 
		WHERE
			`id` = #{orderId}
	</update>
</mapper>